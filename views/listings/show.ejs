<% layout('/layouts/boilerplate') %>

    <div class="row my-3">
        <div class="col-8 offset-2">
            <h3>See Listing Details</h3>
        </div>


        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing Image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= listing.title %>
                    </b> <br>
                    <%= listing.description %> <br>
                        &#8377; <%= Number(listing.price).toLocaleString("en-IN") %> <br>
                            <%= listing.location %> <br>
                                <%= listing.country %>
                </p>
            </div>
        </div>

        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn offset-3 col-1 me-2">Edit</a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark">Delete</button>
            </form>
        </div>



    </div>

    